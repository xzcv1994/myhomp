var app = require('../app');
var debug = require('debug')('reboot:server');
var http = require('http');
var port = normalizePort(process.env.PORT || '3000');
var socketio = require('socket.io');
app.set('port', port);

var server = http.createServer(app);

server.listen(port);

//소켓등록
var io = socketio.listen(server);
server.on('error', onError);
server.on('listening', onListening);

//소켓 connection
io.sockets.on('connection',function(socket){
console.log('socket connection event : ' + socket.id);

    var database = app.get('database');
    var obj;
    
    //message event 수신
    socket.on('send_message',function(message){
        
        console.log("보내는 사람 : " + message.sender);
        console.log("받는 사람 : " + message.receiver);
        console.log("내용 : " + message.message);
        
        var message = new database.Message_Model({'sender' : message.sender, 'receiver' : message.receiver, 'message' : message.message, 'create_date' : new Date()});
        
        //message 저장
        message.save(function(err){
            if(err){
                throw err;
            }else(err = null)
            console.log('message 저장 완료');
        }); 
    });
    
    //chat방에 입장할 때 대화를 누구와 대화를 시작하는지 상태 저장
    socket.on('chat_enter',function(data){
    console.log("---------------------------------")
    console.dir(data);
    
    database.Chat_Model.find({'host' : data.user},function(err,info){
    
    if(err){
    console.log(err);
    throw err;
    }
    
    var contact_person = info[data.person_num]._doc.contact_person;
    var user = data.user;
    console.log("-----------------------save------")
    
    database.Chat_Status_Model.find({'user' : user, 'contact_person' : contact_person},function(err,result){
    if(err){
    console.log(err);
    throw err;
    }
    
    if(result.length == 0){
    
    var status = new database.Chat_Status_Model({'user' : user, 'contact_person' : contact_person});
    
    status.save(function(err){
    if(err){
    console.log(err);
    throw err;
    }
    });
    
    }else{
    console.log("이미 대화중임");
    }
    });
    });
    });
});

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
